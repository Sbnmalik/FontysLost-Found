@page
@model FontysLost_Found.Presentation.Pages.CreateModel
@{
    ViewData["Title"] = "Create a post";
}

<!-- Bootstrap CDN for quick, professional styling (remove if your layout already includes it) -->
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
 *@
<style>
    /* Small, local tweaks to ensure consistent spacing and card look */
    .card-header h4 { margin: 0; }
    #preview img { max-width: 240px; max-height: 240px; object-fit: contain; }
    .form-text { font-size: .875rem; }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create a lost object post</h4>
                </div>

                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="Title" class="form-label">Title</label>
                            <input type="text" id="Title" name="Title" class="form-control" required maxlength="200" placeholder="Short descriptive title" />
                            <div class="form-text">Max 200 characters.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Date" class="form-label">Date</label>
                                <input type="date" id="Date" name="Date" class="form-control" required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Time" class="form-label">Time</label>
                                <input type="time" id="Time" name="Time" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <textarea id="Description" name="Description" class="form-control" rows="5" maxlength="2000" placeholder="Where it was found, distinguishing features, contact info..."></textarea>
                            <div class="form-text">Optional — provide as many details as possible (max 2000 characters).</div>
                        </div>

                        <div class="mb-3">
                            <label for="Attachment" class="form-label">Attachment</label>
                            <input type="file" id="Attachment" name="Attachment" class="form-control" accept="image/*,application/pdf" />
                            <div class="form-text">Optional. Images or PDF (recommended max 5MB).</div>
                            <div id="preview" class="mt-3"></div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" onclick="history.back();">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-muted small mt-3">By submitting this post you confirm the information is accurate and appropriate for the community.</p>
        </div>
    </div>
</div>

<script>
    // Small client-side preview for images/PDF names
    (function () {
        const input = document.getElementById('Attachment');
        const preview = document.getElementById('preview');
        if (!input || !preview) return;

        input.addEventListener('change', function () {
            preview.innerHTML = '';
            const file = input.files && input.files[0];
            if (!file) return;

            if (file.type.startsWith('image/')) {
                const img = document.createElement('img');
                img.className = 'img-thumbnail';
                img.alt = 'Attachment preview';
                const reader = new FileReader();
                reader.onload = function (e) { img.src = e.target.result; };
                reader.readAsDataURL(file);
                preview.appendChild(img);
            } else {
                const p = document.createElement('p');
                p.className = 'mb-0';
                p.textContent = file.name + ' (PDF)';
                preview.appendChild(p);
            }
        }, false);
    })();
</script>
