@page
@model FontysLost_Found.Presentation.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="fw-semibold mb-1">Welcome back</h2>
                    <p class="text-muted mb-4">
                        Login to your Fontys Lost &amp; Found account.
                    </p>

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly"
                             class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.UserName" class="form-label"></label>
                            <input asp-for="Input.UserName"
                                   class="form-control form-control-lg"
                                   autocomplete="username"
                                   placeholder="Username or email" />
                            <span asp-validation-for="Input.UserName"
                                  class="text-danger small"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Input.Password" class="form-label"></label>

                            <div class="input-group input-group-lg">
                                <input asp-for="Input.Password"
                                       class="form-control"
                                       type="password"
                                       id="loginPwd"
                                       autocomplete="current-password"
                                       placeholder="Your password" />
                                <button class="btn btn-outline-secondary"
                                        type="button"
                                        id="toggleLoginPwd">
                                    Show
                                </button>
                            </div>

                            <span asp-validation-for="Input.Password"
                                  class="text-danger small"></span>
                        </div>

                        <button type="submit"
                                class="btn btn-primary btn-lg w-100 mt-3">
                            Login
                        </button>

                        <div class="text-center mt-3">
                            <span class="text-muted">New here?</span>
                            <a asp-page="/Authentication/Register"
                               class="text-decoration-none fw-semibold">
                                Create an account
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-center text-muted small mt-3 mb-0">
                Having trouble logging in? Contact support.
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const pwd = document.getElementById('loginPwd');
        const btn = document.getElementById('toggleLoginPwd');

        btn?.addEventListener('click', () => {
            const isPassword = pwd.type === 'password';
            pwd.type = isPassword ? 'text' : 'password';
            btn.textContent = isPassword ? 'Hide' : 'Show';
        });
    </script>
}
