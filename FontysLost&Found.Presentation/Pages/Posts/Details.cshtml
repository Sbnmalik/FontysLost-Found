@page "/Details/{id:int}" 
@model FontysLost_Found.Presentation.Pages.Posts.DetailsModel
@{
    ViewData["Title"] = "Post Details";
}
<h1 class="mt-4 mb-4">Post details</h1>

@if (Model.Post == null)
{
    <div class="alert alert-danger">
        Post not found.
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <h3 class="card-title mb-0">@Model.Post.Title</h3>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Created: @Model.Post.DateCreated.ToString("dd MMM yyyy HH:mm")
            </p>
            <p>@Model.Post.Description</p>

            <!-- Add extra info if you like: Category, Finder, etc. -->

            <div class="mt-3">
                <a asp-page="/Posts/Edit"
                   asp-route-id="@Model.Post.Id"
                   class="btn btn-warning me-2">
                    Edit
                </a>
                <a asp-page="/Posts/View"
                   class="btn btn-secondary">
                    Back to list
                </a>
            </div>
        </div>
    </div>
}
